{
  "name": "hlpflforms",
  "version": "2.0.0",
  "description": "Professional form builder with user authentication and analytics",
  "private": true,
  "scripts": {
    "build": "npm run build:js && npm run build:css && echo 'Build complete - all assets optimized'",
    "build:js": "node scripts/minify-js.js",
    "build:css": "node scripts/minify-css.js",
    "dev": "wrangler pages dev public",
    "deploy": "npm run build && wrangler pages deploy public",
    "db:init": "wrangler d1 execute hlpflforms --file=./schema.sql",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write &quot;**/*.{js,json,css,html,md}&quot;",
    "format:check": "prettier --check &quot;**/*.{js,json,css,html,md}&quot;",
    "test": "echo 'Visit /test.html to run tests'",
    "perf": "echo 'Performance monitoring active - check console'"
  },
  "keywords": [
    "forms",
    "cloudflare",
    "pages",
    "form-builder"
  ],
  "author": "HLPFL",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "terser": "^5.26.0",
    "cssnano": "^6.0.3",
    "postcss": "^8.4.33"
  }
}